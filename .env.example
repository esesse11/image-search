# Image Search System - Environment Variables
# Copy to .env and fill in your values
# DO NOT commit .env to Git

# OpenAI API
OPENAI_API_KEY=sk-xxxxxxxxxxxxx
OPENAI_ORG_ID=org-xxxxxxxxxxxxx  # Optional

# Embedding Model
EMBED_MODEL=text-embedding-3-small
EMBED_PROVIDER=openai

# Vector Index
INDEX_TYPE=faiss  # faiss or qdrant
FAISS_PATH=./app/data/index.faiss
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=  # Optional, leave empty for local

# Database
DB_PATH=./app/data/images.db
DB_TYPE=sqlite

# Image Paths
RAW_IMAGES_DIR=./app/data/raw_images
PROCESSED_IMAGES_DIR=./app/data/processed_images
THUMBNAILS_DIR=./app/data/thumbnails

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# UI Settings
UI_HOST=0.0.0.0
UI_PORT=8501
UI_THEME=light

# Captioning
CAPTION_PROVIDER=openai
CAPTION_MODEL=gpt-4-vision

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Development
DEV_MODE=false
DEBUG=false
MOCK_EMBEDDINGS=false
